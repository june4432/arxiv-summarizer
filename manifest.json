{
  "manifest_version": 3,
  "name": "arXiv Summarizer",
  "version": "1.1",
  "description": "arXiv 논문을 n8n/Claude/OpenAI로 요약받기",
  "permissions": ["activeTab", "scripting", "sidePanel", "storage", "contextMenus", "declarativeNetRequest"],
  "action": {
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "host_permissions": ["https://arxiv.org/*", "https://api.anthropic.com/*", "https://api.openai.com/*", "https://api.notion.com/*"],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_anthropic",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}